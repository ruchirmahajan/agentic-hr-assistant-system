# Database Configuration
DATABASE_URL=postgresql://hr_admin:your_secure_password@localhost:5432/hr_assistant_db
DATABASE_POOL_SIZE=20

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_minio_password
MINIO_SECURE=false
MINIO_BUCKET_RESUMES=hr-resumes
MINIO_BUCKET_DOCUMENTS=hr-documents

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4000
CLAUDE_RATE_LIMIT_RPM=50

# Security Configuration
SECRET_KEY=your_very_secure_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# GDPR Configuration
DATA_RETENTION_YEARS=7
CONSENT_REQUIRED=true
AUDIT_LOG_RETENTION_YEARS=10

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt

# PostgreSQL Configuration
POSTGRES_DB=hr_assistant_db
POSTGRES_USER=hr_admin
POSTGRES_PASSWORD=your_secure_password

# Development/Production Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# Application Settings
APP_NAME=Agentic HR Assistant
APP_VERSION=1.0.0
API_PREFIX=/api/v1